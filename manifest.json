{
  "manifest_version": 3,
  "name": "Edge Hover Bookmarks",
  "version": "1.0.0",
  "description": "Hover-activated bookmarks sidebar that works on any website.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "bookmarks",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "bg/sw.js",
    "type": "module"
  },
  "action": {
    "default_title": "Edge Hover Bookmarks"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "hover/content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "favicon-content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}